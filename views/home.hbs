<div class="title-cards">
  <h1>{{user.username}}'s Home</h1>
</div>

<div class="post-cards">
  {{#each user.posts}}
    <div class="single-card">
      <img class="post-img {{_id}}" src="{{postPhotoUrl}}" alt="{{title}}" />
      <div class="text-card">
        <h4>{{title}}</h4>
        <h4>{{user.email}}</h4>
        <p>{{description}}</p>
        {{#eachã€€tags}}
          <p>{{this}}</p>
        {{/each}}
        <form action="/post/delete/{{_id}}" method="POST">
          <button class="btn btn-delete" type="submit">
          <span class="mdi mdi-delete mdi-24px"></span>
          <span class="mdi mdi-delete-empty mdi-24px"></span>
          <span>Delete post</span>  
          </button>
        </form>
        <hr class="hr-post">
      </div>
    </div>
  {{/each}}
</div>

<div class="match-scroller">
  {{#each myMatches}}
    <div class="match-card">
      <img src="{{userPhotoUrl}}" alt="match-img" />
      <p>matched with {{username}}</p>
    </div>
  {{/each}}
</div>
